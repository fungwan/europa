<div class="row">
    <div class="col-lg-12">
        <div class="portlet box portlet-green">
            <div class="portlet-body">
                <div id="rootwizard-custom-circle">
                    <div class="navbar">
                        <div class="navbar-inner">
                            <ul>
                                <li ng-class="{true: 'active', false: 'inactive'}[statusTitleStyle == 0]">
                                    <a>
                                        <i class="glyphicon glyphicon-user"></i>
                                        <p class="anchor">派单中</p>
                                        <!--p class="description">基本信息</p-->
                                    </a>
                                </li>
                                <li ng-class="{true: 'active', false: 'inactive'}[statusTitleStyle == 1]">
                                    <a>
                                        <i class="glyphicon glyphicon-send mln"></i>
                                        <p class="anchor">订单信息</p>
                                        <p class="description"></p>
                                    </a>
                                </li>
                                <li ng-class="{true: 'active', false: 'inactive'}[statusTitleStyle == 2]">
                                    <a>
                                        <i class="glyphicon glyphicon-wrench"></i>
                                        <p class="anchor">施工阶段</p>
                                        <p class="description"></p>
                                    </a>
                                </li>
                                <li ng-class="{true: 'active', false: 'inactive'}[statusTitleStyle == 3]">
                                    <a>
                                        <i class="glyphicon glyphicon-check"></i>
                                        <p class="anchor">评价</p>
                                        <p class="description"></p>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!--div id="bar" class="progress">
                        <div class="bar progress-bar progress-bar-primary"></div>
                    </div-->
                    <div>
                        <div id="tab1-wizard-custom-circle" class="tab-pane" ng-if="statusTitleStyle==0">
                            <h3 class="mbxl">基本信息：</h3>
                            <form action="#" class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">客户姓名：<span ng-bind="orderDetailInfo.houseOwnerName"></span>
                                    </label>
                                    <!--label class="col-sm-3 control-label" >联系电话：<span id="customerPhone-span">18180450714</span>
                                    </label-->
                                    <label class="col-sm-6 control-label">房屋住址：<span ng-bind="orderDetailInfo.house_info.address"></span>
                                    </label>
                                </div>
                                <!--div class="form-group">
                                    <label class="col-sm-3 control-label">装修内容：<span>整装</span>
                                    </label>
                                </div-->
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">候选者：
                                    </label>
                                    <label class="col-sm-6 control-label" style="position: relative;text-align: left">
                                        <span ng-bind="orderDetailInfo.candidateTxt"></span></label>
                                </div>
                            </form>
                        </div>
                        <div id="tab2-wizard-custom-circle" class="tab-pane" ng-if="statusTitleStyle>0">
                            <h3 class="mbxl">合同信息</h3>
                            <div class="row">
                                <div class="col-md-12">
                                    <label class="col-sm-3 control-label">项目地址：<span ng-bind="orderDetailInfo.contractDetail.house_address"></span>
                                    </label>
                                    <label class="col-sm-3 control-label">面积：<span ng-bind="orderDetailInfo.contractDetail.house_acreage + '平'"></span>
                                    </label>
                                    <label class="col-sm-6 control-label">套型：<span ng-bind="orderDetailInfo.contractDetail.house_type"></span>
                                    </label>
                                    <label class="col-sm-3 control-label">甲方：<span ng-bind="orderDetailInfo.contractDetail.first_part.name"></span>
                                    </label>
                                    <label class="col-sm-3 control-label">乙方：<span ng-bind="orderDetailInfo.contractDetail.second_part.name"></span>
                                    </label>
                                    <label class="col-sm-6 control-label">丙方：<span ng-bind="orderDetailInfo.contractDetail.third_part.name">悠住</span>
                                    </label>
                                </div>
                            </div>
                            <br>
                            <div class="row" style="height:200px; overflow:auto;">
                                <div class="col-md-12"><span class="label label-default">报价单</span></div>
                                <br>
                                <hr>
                                <div id="quotationArray">
                                    <div class="col-sm-6 col-md-3">
                                        <label ng-if="orderDetailInfo.contractDetail.quotation.length == 0">工长还未上传报价单</label>
                                        <a href="#" ng-repeat="quotation in orderDetailInfo.contractDetail.quotation" data-target="#show_img_preview" data-toggle="modal"
                                        ng-click="previewImg(qiniuUrl + quotation)">
                                            <img border=1 src="{{qiniuUrl + quotation}}" width="128" height="128" />
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="tab3-wizard-custom-circle" class="tab-pane fadeIn" ng-if="statusTitleStyle>1">
                            <div class="col-md-12">
                                <div id="accordion1" class="panel-group">
                                    <div class="panel panel-default">
                                        <div class="panel-heading"><a data-toggle="collapse" data-parent="#accordion1" data-target="#collapseOne1" href="#">施工项</a>
                                            <i class="indicator glyphicon glyphicon-chevron-down pull-right mts text-muted"></i>
                                        </div>
                                        <div id="collapseOne1" class="panel-collapse collapse in">
                                            <div class="panel-body" style="height:300px; overflow:auto;">
                                                <table id="contractItem-table" class="table table-hover table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th>名称</th>
                                                            <th>金额</th>
                                                            <th>工期</th>
                                                            <th>工段状态</th>
                                                            <th></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr ng-repeat="contractItem in orderDetailInfo.contractItemArray">
                                                            <td class="active" ng-bind="contractItem.name"></td>
                                                            <td class="active" ng-bind="contractItem.amount/100 + '元人民币'"></td>
                                                            <td class="active" ng-bind="contractItem.due_time/86400 + '天' "></td>
                                                            <td class="active" ng-bind="contractItemStatusArrary[contractItem.status]"></td>
                                                            <td>
                                                                <button type="button" data-toggle="modal" class="btn btn-default btn-xs" ng-click="onShowBuildingLogs(contractItem)"><i class="fa fa-archive"></i>&nbsp;施工日志</button>&nbsp;
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="tab4-wizard-custom-circle" class="tab-pane fadeIn" ng-if="statusTitleStyle>2">
                            <h3 class="mbxl">谢谢!</h3>
                            <p>本次交易公平、公开、公正</p>
                            <p>感谢使用悠住!</p>
                        </div>
                        <!--div class="action text-right">
                            <button type="button" name="previous" value="Previous" class="btn btn-info button-previous"><i class="fa fa-arrow-circle-o-left mrx"></i>上一步</button>
                            <button type="button" name="next" value="Next" class="btn btn-info button-next mlm">下一步<i class="fa fa-arrow-circle-o-right mlx"></i>
                            </button>
                        </div-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div aria-hidden="true" id="show_building_logs" tabindex="-1" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="modal-wide-width-label" class="modal-title">施工日志</h4>
            </div>
            <div class="panel-body" style="height:300px; overflow:auto;">
                <div id="grid-layout-table1" class="box jplist">
                    <div class="box text-shadow">
                        <table class="demo-tbl">
                            <tbody>
                                <tr class="tbl-item" ng-repeat="log in buildingLogs">
                                    <td class="img">
                                        <a href="#" data-target="#show_img_preview" data-toggle="modal" ng-click="previewImg(qiniuUrl + log.photos[0])">
                                            <img src="{{qiniuUrl + log.photos[0]}}" alt="" title="" width="128" height="128">
                                        </a>
                                    </td>
                                    <td class="td-block">
                                        <p class="date" ng-bind="timeToStr(log.create_time*1000)">03/15/2012</p>
                                        <p class="desc" ng-bind="log.description">马克</p>
                                        <!--p class="desc">瓷砖装贴完毕.</p-->
                                        <p class="like"></p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <button type="button" data-toggle="modal" data-target="#commit-building-dialog" class="btn btn-default btn-xs" ng-click="onShowCommitBuildingLogs()"><i class="fa fa-archive"></i>&nbsp;上传施工日志</button>&nbsp;
            </div>
        </div>
    </div>
</div>


<div id="commit-building-dialog" tabindex="-1" role="dialog" aria-hidden="true" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header modal-header-primary">
                <h4 class="modal-title">上传施工日志</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <form class="form-horizontal">
                            <div class="form-body pal">
                                <div class="form-group">
                                    <div id="preview">
                                        <img id="imghead" border=1 src="{{newBuildingLog.selectImg}}" width="256" height="256" />
                                    </div>
                                </div>
                                <input id="input-upload" type="file" ng-file-select="onFileSelect($files)" />
                            </div>
                        </form>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="inputMessage" class="control-label">日志简述:</label>
                            <textarea rows="10" class="form-control" ng-model='newBuildingLog.descriptive'></textarea>
                        </div>
                    </div>
                </div>
                <div class="form-actions text-right pal">
                    <button ng-click="uploadBuildingLog()" class="btn btn-pink">上传日志</button>
                </div>
            </div>
        </div>
    </div>
</div>





<div aria-hidden="true" id="show_img_preview" tabindex="-1" class="modal fade">
    <div class="modal-dialog">
        <img width='600' height='100%' src="{{preImgSrc}}" img-preview="" />
    </div>
</div>