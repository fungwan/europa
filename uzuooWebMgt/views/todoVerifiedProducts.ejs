<div id="modal-confirm-verify" tabindex="-1" role="dialog" aria-hidden="true" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">确定审核通过?</div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-default">取消</button>
                <button id="btn-delAll" type="button" data-dismiss="modal" class="btn btn-primary" ng-click="commitVerify()">确定</button>
            </div>
        </div>
    </div>
</div>

<div id="modal-confirm-reject" tabindex="-1" role="dialog" aria-hidden="true" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">确定审核驳回?</div>
            <div class="col-lg-12">
                <form class="form-horizontal">
                    <div class="form-body pal">
                        <div class="input-group input-daterange col-md-8 col-md-offset-1">
                            <span class="input-group-addon">驳回理由</span>
                            <input type="text" ng-model="rejectReason" class="form-control">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-default">取消</button>
                <button id="btn-delAll" type="button" data-dismiss="modal" class="btn btn-primary" ng-click="commitReject()">确定</button>
            </div>
        </div>
    </div>
</div>