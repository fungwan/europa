<div id="title-breadcrumb-option-demo" class="page-title-breadcrumb">
    <div class="page-header pull-left">
        <div class="page-title">广告管理</div>
    </div>
    <div class="clearfix"></div>
</div>
<!--END TITLE & BREADCRUMB PAGE-->
<!--BEGIN CONTENT-->
<div class="page-content">
    <div id="table-action" class="row">
        <div class="col-lg-12">
            <ul id="tableAllAdvertisementTab" class="nav nav-tabs">
                <li id="top" class="active"><a  href="#" data-toggle="tab" ng-click="onClickTopTab()">顶部广告</a>
                </li>
                <li id="bottom"><a href="#" data-toggle="tab" ng-click="onClickBottomTab()">底部广告</a>
                </li>
            </ul>
        </div>
        <div class="tab-content">   
            <div id="table-top-tab" class="tab-pane fade in active">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel" ng-class="titleClass">
                            <div class="panel-heading" ng-bind="pageTitle">顶部广告</div>
                            <div class="panel-body">
                                <div class="row mbl">
                                    <div class="col-lg-6">
                                        <div class="input-group input-daterange col-lg-5">
                                            <span class="input-group-addon">图片切换的时间</span>
                                            <input type="text" ng-model="advertisements.interval" class="form-control" ng-blur="onComitUpdate()">
                                            <span class="input-group-addon">秒</span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="tb-group-actions pull-right"><span></span>
                                            <button type="button" class="btn btn-blue " data-target="#create_advertisement_dlg" data-toggle="modal" ng-click="onShowCreate()">添加广告</button>
                                        </div>
                                    </div>
                                </div>
                                <table class="table table-hover table-bordered table-advanced">
                                    <thead>
                                        <tr role="row" class="heading">
                                            <th width="10%" class="sorting">广告标题</th>
                                            <th width="10%" class="sorting">广告图片地址</th>
                                            <th width="10%" class="sorting">广告链接地址</th>
                                            <th width="10%" class="sorting"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="advertisement in advertisements.ads">
                                            <td ng-bind="advertisement.title"></td>
                                            <td ng-bind="advertisement.photos[0]"></td>
                                            <td ng-bind="advertisement.href"></td>
                                            <td>
                                                <button type="button" class="btn btn-default btn-xs" data-target="#edit_advertisement_dlg" data-toggle="modal" ng-click="onShowEditDlg(advertisement, $index)"><i class="fa fa-edit"></i>&nbsp; 编辑</button>&nbsp;
                                                <button type="button" class="btn btn-danger btn-xs " data-target="#modal-confirm" data-toggle="modal" ng-click="onDeleteOne($index)"><i class="fa fa-trash-o"></i>&nbsp; 删除</button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div aria-hidden="true" id="edit_advertisement_dlg" tabindex="-1" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="row">
                <!-- start -->
                <div class="col-lg-12" style="height:10%">
                    <div class="portlet box portlet-blue">
                        <div class="portlet-header">
                            <div class="caption">编辑广告</div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <form class="form-horizontal">
                        <div class="form-body pal">
                            <div class="form-group">
                                <label class="col-md-3 control-label">广告标题</label>
                                <div class="col-md-9">
                                    <div class="input-icon">
                                        <input ng-model="selectAdvertisement.title" class="form-control input-sm" type="text">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">广告图片地址</label>
                                <div class="col-md-9">
                                    <div class="input-icon">
                                        <input ng-model="selectAdvertisement.photos[0]" class="form-control input-sm" type="text">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">图片链接地址</label>
                                <div class="col-md-9">
                                    <div class="input-icon">
                                        <input ng-model="selectAdvertisement.href" class="form-control input-sm" type="text">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <div id="modify_conference_footer">
                    <div class="col-md-6">
                    </div>
                    <div class="col-md-6">
                        <button type="button" data-dismiss="modal" class="btn btn-default" ng-click="onComitEdit()">确定</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div aria-hidden="true" id="create_advertisement_dlg" tabindex="-1" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="row">
                <!-- start -->
                <div class="col-lg-12" style="height:10%">
                    <div class="portlet box portlet-blue">
                        <div class="portlet-header">
                            <div class="caption">新增广告</div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <form class="form-horizontal">
                        <div class="form-body pal">
                            <div class="form-group">
                                <label class="col-md-3 control-label">广告标题</label>
                                <div class="col-md-9">
                                    <div class="input-icon">
                                        <input ng-model="newAdvertisement.title" class="form-control input-sm" type="text">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">广告图片地址</label>
                                <div class="col-md-9">
                                    <div class="input-icon">
                                        <input ng-model="newAdvertisement.photos[0]" class="form-control input-sm" type="text">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">图片链接地址</label>
                                <div class="col-md-9">
                                    <div class="input-icon">
                                        <input ng-model="newAdvertisement.href" class="form-control input-sm" type="text">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <div id="modify_conference_footer">
                    <div class="col-md-6">
                    </div>
                    <div class="col-md-6">
                        <button type="button" data-dismiss="modal" class="btn btn-default">取消</button>
                        <button type="button" data-dismiss="modal" class="btn btn-primary" ng-click="onCreateAdvertisement()">确定</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div id="modal-confirm" tabindex="-1" role="dialog" aria-hidden="true" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">你确定删除吗?</div>
            <div class="modal-footer">
                <input type="hidden" value="">
                <button type="button" data-dismiss="modal" class="btn btn-default">取消</button>
                <button id="btn-del" type="button" data-dismiss="modal" class="btn btn-primary" ng-click="confirmDelete()">确定</button>
            </div>
        </div>
    </div>
</div>